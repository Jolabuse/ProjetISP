<Window x:Class="ProjetISF.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ProjetISF"
        mc:Ignorable="d"
        Title="AdminWindow" Height="450" Width="800"
        ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="0,50,0,0">
            <Button Width="100" Height="40" Content="Ajouter un client" Margin="60,0,60,0" Click="ButtonAdClient_OnClick" />
            <Button Width="100" Height="40" Content="voir tout les clients" Click="ButtonSeeClient_OnClick" />
            <TextBox Name="clientid"   FontSize="22" Margin="0,30,10,0" HorizontalAlignment="Center"/>
            <Button Width="100" Height="40" Content="Acceder a la page d'un client" Click="ButtonBase_OnClick" />
        </StackPanel>
    </Grid>
</Window>
