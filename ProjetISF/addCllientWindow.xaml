<Window x:Class="ProjetISF.addCllientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ProjetISF"
        mc:Ignorable="d"
        Title="addCllientWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox Name="name" Foreground="White"  Width="20" Height="20"  FontSize="22" Margin="0,30,10,0" HorizontalAlignment="Center"/>
            <TextBox Name="firstname"  Width="20" Height="20"   Foreground="White"  FontSize="22" Margin="0,30,10,0" HorizontalAlignment="Center"/>
            <TextBox Name="pin" Foreground="White"   Width="20" Height="20"   FontSize="22" Margin="0,30,10,0" HorizontalAlignment="Center"/>

            <ComboBox Name="currency"  Width="20" Height="20"  >
                <ComboBoxItem>EUR</ComboBoxItem>
                <ComboBoxItem IsSelected="True">USD</ComboBoxItem>
                <ComboBoxItem>JPY</ComboBoxItem>
            </ComboBox>
            <Button  Click="ButtonBase_OnClick" Width="20" Height="20" Background="Transparent" BorderThickness="0" Foreground="Gray" FontWeight="Bold" Margin="-5,5,5,5" Content="GO"  Cursor="Hand"/>

        </StackPanel>
       
    </Grid>
</Window>
